{
  "parser": "babel-eslint",
  "plugins": ["react"],
  "extends": [
    "standard",
    "plugin:react/recommended"
  ],
  "settings": {
    "react": {
      "version": "16.5"
    }
  },
  "env": {
    "browser": true,
    "jest": true
  },
  "rules": {
    "no-new": "off",
    "object-curly-spacing": ["error", "never"],
    "one-var": ["error", "always"]
  }
}
